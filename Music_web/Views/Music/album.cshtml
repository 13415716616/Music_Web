
@{
    ViewData["Title"] = "album";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var album = ViewBag.album as IList<Music_web.Music_API.Album_info>;
    var i = 2;
}
<head>
    <title>歌单</title>
</head>
<body>
    <div style="height:300px;width:300px; margin-top:50px;float:left;margin-left:10%"><img src=@album[0].img ; height="100%" width="100% " /></div>
    <div style="height:300px;width:500px;float:left;margin-left:15px;margin-top:4%;">
        <h1 style="font-family:楷体">@album[0].name</h1><br />
        <p style="font-family:楷体">@album[0].music_name<p>
        <p style="font-family:楷体;max-height:150px;overflow:hidden" >@album[0].dec</p>
    </div>
    <table class="table" style="width: 90%;margin-left:5%">
        <thead style="size: 10ch">
        <th>歌曲名</th>
        <th>歌手</th>
        <th>专辑</th>
        @*<th>歌曲长度</th>*@
        </thead>
        <tbody style="opacity:0.5">

            @foreach (var song in album)
            {
                @if (i % 2 == 0)
                {
                    <tr style="background-color:#f0fcff;">
                        <td><a href="writejson?id=@song.id">@song.music_name</a></td>
                        <td>@song.singer</td>
                        <td>@song.name</td>
                        @*<td>111</td>*@
                    </tr>
                }
                else
                {
                    <tr>
                        <td><a href="writejson?id=@song.id">@song.music_name</a></td>
                        <td>@song.singer</td>
                        <td>@song.name</td>
                        @*<td>111</td>*@
                    </tr>
                }
                i++;
            }
        </tbody>
    </table>
</body>
