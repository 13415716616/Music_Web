@model Music_web.Models.Music

@{
    ViewData["Title"] = "Update_music";
    var user = ViewData["User"] as User;
}

<div style="width:100%;height:300px;background-image:url('/img/xinkong.jpg')">
    <img src="@user.User_image" height="100px" width="100px" class="rounded-circle" style="float:left;margin-left:45%;margin-top:80px" />
    <p style="color:white;position:absolute;float:left;margin-left:45%;margin-top:190px"><font size="+3">@user.User_name</font></p>
    <div style="color:white;position:absolute;float:left;margin-top:260px;font-size:22px;margin-left:2%">
        <span><a href="/User/My_Music" style="color:white">我的收藏</a> &nbsp;</span>
        <span><a href="/User/User_Setting" style="color:white">用户信息</a> &nbsp; </span>
        <span><a href="/User/Update_music" style="color:white">上传音乐</a> &nbsp; </span>
        <span>专辑  </span>
    </div>
</div>

<h4>上传音乐</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4" style="position:absolute">
            <form asp-action="Update_music" asp-controller="User" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MusicId" />
                <div class="form-group">
                    <label asp-for="Music_name" class="control-label"></label>
                    <input asp-for="Music_name" class="form-control" />
                    <span asp-validation-for="Music_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Music_singer" class="control-label"></label>
                    <input asp-for="Music_singer" class="form-control" />
                    <span asp-validation-for="Music_singer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Music_specialName" class="control-label"></label>
                    <input asp-for="Music_specialName" class="form-control" />
                    <span asp-validation-for="Music_specialName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Music_type" class="control-label"></label>
                    <input asp-for="Music_type" class="form-control" />
                    <span asp-validation-for="Music_type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Music_download" class="control-label"></label>
                    <input type="file" name="MusicFile" asp-for="MusicFile" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" style="background-color: #008CBA;border: none; color: white;padding: 15px 32px;text-align: center; text-decoration: none;display: inline-block;font-size: 16px; margin: 4px 2px;cursor: pointer;" />
                </div>
                @ViewBag.Message
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
